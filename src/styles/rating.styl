.rating-block

  .rating-block__rating-stars-panel
    display inline-block

    .rating-stars-panel__star
      display inline-block
      cursor pointer
      background url('data:image/svg+xml;base64,') center no-repeat

  .rating-block__rating-stars-panel--sm
    .rating-stars-panel__star
      width 16px
      height @width

  .rating-block__rating-stars-panel--md
    .rating-stars-panel__star
      width 24px
      height @width

  .rating-block__rating-stars-panel--lg
    .rating-stars-panel__star
      width 36px
      height @width

  for i in (1..5)
    .rating-block__rating-stars-panel--{ i }-of-5
      for j in (1..i)
        .rating-stars-panel__star:nth-child({ j })
          background-image: url('data:image/svg+xml;base64,')



