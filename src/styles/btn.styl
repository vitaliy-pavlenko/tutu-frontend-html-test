.btn
  display inline-block
  border-radius 5px
  text-align center
  -ms-touch-action manipulation
  touch-action manipulation
  cursor pointer
  background rgba(245,245,245,1)
  background -moz-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(241,241,241,1) 49%, rgba(235,235,235,1) 53%, rgba(232,232,232,1) 100%)
  background -webkit-gradient(left top, left bottom, color-stop(0%, rgba(245,245,245,1)), color-stop(49%, rgba(241,241,241,1)), color-stop(53%, rgba(235,235,235,1)), color-stop(100%, rgba(232,232,232,1)))
  background -webkit-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(241,241,241,1) 49%, rgba(235,235,235,1) 53%, rgba(232,232,232,1) 100%)
  background -o-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(241,241,241,1) 49%, rgba(235,235,235,1) 53%, rgba(232,232,232,1) 100%)
  background -ms-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(241,241,241,1) 49%, rgba(235,235,235,1) 53%, rgba(232,232,232,1) 100%)
  background linear-gradient(to bottom, rgba(245,245,245,1) 0%, rgba(241,241,241,1) 49%, rgba(235,235,235,1) 53%, rgba(232,232,232,1) 100%)
  filter s('progid:DXImageTransform.Microsoft.gradient(startColorstr=%s, endColorstr=%s, GradientType=0)', #f5f5f5, #e8e8e8)
  outline none
  font-weight bold
  font-family sans-serif
  border 1px solid #b9b9b9
  box-sizing content-box
  padding 0
  text-decoration none
  color #000
  &::-moz-focus-inner
    padding 0
    border 0

  &:active
    background rgba(232,232,232,1)
    background -moz-linear-gradient(top, rgba(232,232,232,1) 0%, rgba(235,235,235,1) 47%, rgba(241,241,241,1) 51%, rgba(245,245,245,1) 100%)
    background -webkit-gradient(left top, left bottom, color-stop(0%, rgba(232,232,232,1)), color-stop(47%, rgba(235,235,235,1)), color-stop(51%, rgba(241,241,241,1)), color-stop(100%, rgba(245,245,245,1)))
    background -webkit-linear-gradient(top, rgba(232,232,232,1) 0%, rgba(235,235,235,1) 47%, rgba(241,241,241,1) 51%, rgba(245,245,245,1) 100%)
    background -o-linear-gradient(top, rgba(232,232,232,1) 0%, rgba(235,235,235,1) 47%, rgba(241,241,241,1) 51%, rgba(245,245,245,1) 100%)
    background -ms-linear-gradient(top, rgba(232,232,232,1) 0%, rgba(235,235,235,1) 47%, rgba(241,241,241,1) 51%, rgba(245,245,245,1) 100%)
    background linear-gradient(to bottom, rgba(232,232,232,1) 0%, rgba(235,235,235,1) 47%, rgba(241,241,241,1) 51%, rgba(245,245,245,1) 100%);
    filter s('progid:DXImageTransform.Microsoft.gradient(startColorstr=%s, endColorstr=%s, GradientType=0)', #e8e8e8, #f5f5f5)

.btn--sm
  width 80px
  height (@width / 4)
  font-size 12px
  a^[0]
  div^[0]
    line-height @height

.btn--md
  width 120px
  height (@width / 4)
  font-size 14px
  a^[0]
  div^[0]
    line-height @height

.btn--lg
  width 160px
  height (@width / 4)
  font-size 16px
  a^[0]
  div^[0]
    line-height @height
