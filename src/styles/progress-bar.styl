.progress__progress-bar
  width 210px
  height 14px
  -webkit-appearance none
  -moz-appearance none
  appearance none
  box-sizing border-box
  border-radius 5px
  background-color #fff
  box-shadow 0 3px 2px rgba(0, 0, 0, 0.25) inset;
  border 1px solid #f7f7f7
  color #5ee515
  position absolute
  z-index -1

  &::-webkit-progress-bar
    border-radius 5px
    background-color #fff
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.25) inset;

  &::-webkit-progress-value
    border-radius 5px
    background rgba(126,255,87,1);
    background-image -webkit-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)

  &::-moz-progress-bar
    border-radius 5px
    background-image -moz-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)

progress[role]
  width 210px
  height 14px
  position absolute

progress[aria-valuenow]
  background #fff

progress[role]:after
  background-image none

progress[aria-valuenow]::before
  background rgba(126,255,87,1)
  background-image -moz-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)
  background-image -webkit-gradient(left top, left bottom, color-stop(0%, rgba(126,255,87,1)), color-stop(12%, rgba(126,255,87,1)), color-stop(34%, rgba(0,214,39,1)), color-stop(69%, rgba(0,203,30,1)), color-stop(95%, rgba(94,229,21,1)), color-stop(99%, rgba(0,219,26,1)), color-stop(100%, rgba(0,219,26,1)))
  background-image -webkit-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)
  background-image -o-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)
  background-image -ms-linear-gradient(top, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)
  background-image linear-gradient(to bottom, rgba(126,255,87,1) 0%, rgba(126,255,87,1) 12%, rgba(0,214,39,1) 34%, rgba(0,203,30,1) 69%, rgba(94,229,21,1) 95%, rgba(0,219,26,1) 99%, rgba(0,219,26,1) 100%)

.progress__progress-value
  color #000
  width 210px
  text-align center
  font-size 10px
  line-height 16px
